{
    "variables": {
        "aws_access_key": "",
        "aws_secret_key": "",
        "aws_region": "us-east-1",
        "subnet_id": "",
        "source_ami": "ami-9887c6e7",
        "ssh_username":"centos"
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "region": "{{user `aws_region`}}",
            "instance_type": "t2.micro",
            "subnet_id": "{{user `subnet_id`}}",
            "source_ami": "{{user `source_ami`}}",
            "ssh_username": "{{user `ssh_username`}}",
            "ami_name": "csye6225_{{timestamp}}",
            "ami_description": "Cent-OS AMI for CSYE 6225 - Summer 2019",
            "launch_block_device_mappings": [
                {
                    "device_name": "/dev/sda1",
                    "volume_size": 20,
                    "volume_type": "gp2",
                    "delete_on_termination": false
                }
            ]
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "environment_vars": [
                "FOO=foo"
            ],
            "inline": [
                "sudo yum update -y",
                "sudo yum install wget -y",
                "sudo yum install java-1.8.0-openjdk -y",
                "sudo yum install java-1.8.0-openjdk-devel -y",
                "sudo yum install git -y",
                "sudo yum install maven -y",
                "cd ~ && mkdir downloads && cd downloads",
                "wget https://s3.us-east-1.amazonaws.com/amazoncloudwatch-agent-us-east-1/centos/amd64/latest/amazon-cloudwatch-agent.rpm",
                "sudo rpm -U ./amazon-cloudwatch-agent.rpm",
                "cd ~ && wget https://github.com/nikunjlad/csye6225-su19-ami/blob/master/centos-ami-template.json",
                "cd ~ && mkdir images",
                "wget http://mirrors.ibiblio.org/apache/tomcat/tomcat-9/v9.0.21/bin/apache-tomcat-9.0.21.tar.gz",
                "tar xvf apache-tomcat-9.0.21.tar.gz",
                "mv apache-tomcat-9.0.21 tomcat",
                "cd ~/tomcat/bin/",
                "./startup.sh",
                "sudo yum install ruby -y",
                "cd /home/centos",
                "wget https://aws-codedeploy-us-east-1.s3.us-east-1.amazonaws.com/latest/install",
                "chmod +x ./install",
                "sudo ./install auto"
            ]
        }
    ]

}
